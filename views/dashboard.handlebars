<header>
    <nav>
        <a href="/homepage">Home</a>
        <a href="/dashboard">Dashboard</a>
        <a href="/login">Login</a>
    </nav>
    <h1>
        <a href="/">The Tech Blog</a>
    </h1>
</header>
</br>
<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
        <div class="title">
            <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
            <span>({{post.post_url}})</span>
        </div>
        <div class="meta">
            by {{post.user.username}} on {{post.created_at}} with detailed descripton: {{post.text}}

            <a href="/post/{{id}}">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
    <a href="/signup">Would you Like to Sign Up?</a>
</ol>